/circle {
    newpath
    %the face
    0 0 100 0 360 arc
    gsave
    .2 .1 .2 setrgbcolor
    fill
    grestore
    stroke

    %the right eye
    40 30 10 0 360 arc
    gsave
    .3 .7 .9 setrgbcolor
    fill
    grestore
    stroke

    %left eye
    -40 30 10 0 360 arc
    gsave
    .8 .6 .1 setrgbcolor
    fill
    grestore
    stroke

    %the smile
    0 0 -60 20 160 arc
    closepath
    gsave
    .5 1 .5 setrgbcolor
    fill
    grestore
    stroke

} def

/sign {
    /Times-Roman findfont
    20 scalefont
    setfont
    newpath
    500 10 moveto
    (Joey Brennan) show
} def

